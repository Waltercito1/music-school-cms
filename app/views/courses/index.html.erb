<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <h5 class="error"><%= flash[:error] %></h5>
    </div>
<% elsif flash[:success] %>
    <div class="alert alert-success" role="alert">
        <h5 class="success"><%= flash[:success] %></h5>
    </div>
<% end %>


<h1>Available Courses</h1>
<div class="btn-group">
    <form action="/courses/new" method="get">
        <button type="submit" class="btn btn-primary" formmethod="get">Create a New Course</button>
    </form>
</div>

<div class="card-body">
    <h5 class="card-title">Below is a comprehensive list of all courses currently available.</h5>
    <p class="card-text">Click a couse link to view more details.</p>
</div>

<div class="list-group">
    <% @courses.each do |course|%>
        
  <a href="/courses/<%= course.id%>" class="list-group-item"><%= course.name %></a>
  <%end%>
</div>
