<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <h5 class="error"><%= flash[:error] %></h5>
    </div>
<% elsif flash[:success] %>
    <div class="alert alert-success" role="alert">
        <h5 class="success"><%= flash[:success] %></h5>
    </div>
<% end %>

<h1>Edit Course</h1>

<div class="form-container">
    <form method="post" action="/courses/<%= @course.id %>">
    <input type="hidden" value="patch" name="_method">
        <div class="form-group">
            <label for="name">Course Name:</label>
            <input type="text" name="course[name]" id="name" value="<%= @course.name %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Course description:</label>
            <textarea name="course[description]" id="description" class="form-control" rows="3" placeholder="This field is currently empty. Add a course description."><%= @course.description %></textarea>
        </div>
        <div class="btn-group">
            <input type="submit" class="btn btn-primary"value="Submit updates">
        </div>
    </form>
</div>