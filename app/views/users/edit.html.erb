<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <div class="errors flash fatal">
            <h4 class="error"><%= flash[:error] %></h4>
        </div>
    </div>
<% end %>

<h1>Edit User</h1>

<div class="form-container">
    <form method="post" action="/users/<%= @user.id %>">
    <input type="hidden" value="patch" name="_method">
        <div class="form-group">
            <label for="user_name">User Name:</label>
            <input type="text" name="user[user_name]" id="user_name" value=<%= @user.user_name %> class="form-control">
        </div>
        <div class="form-group">
            <label for="email_address">Email address: </label>
            <input type="email" name="user[email_address]" id="email_address" value=<%= @user.email_address %> class="form-control" ><br>
        </div>
        <div class="mb-3">
            <label for="bio" class="form-label">Biography:</label>
            <textarea name="user[bio]" id="bio" class="form-control" id="bio"  rows="3" placeholder="This field is currently empty. Add a bio."><%= @user.bio %></textarea>
        </div>

        <input type="submit" value="Submit updates">
    </form>
</div>