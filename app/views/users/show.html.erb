<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <h5 class="error"><%= flash[:error] %></h5>
    </div>
<% elsif flash[:success] %>
    <div class="alert alert-success" role="alert">
        <h5 class="success"><%= flash[:success] %></h5>
    </div>
<% end %>

<h1>User information</h1>

<div class="list-group">
    <h2>User name: <%= @user.user_name %> </h2>
    <h3>Email address: <a href="Mailto:<%= @user.email_address%>" > <%= @user.email_address%></a> </h3>
    <h3>Biography: <%= @user.bio %></h3>
    <h3>Instructor: <%= @user.instructor%></h3>
</div>
<div class="btn-group">
    <form action="/users/<%=@user.id%>/edit" method="get">
    <button type="submit" class="btn btn-primary" formmethod="get">Edit User's Info</button>
    </form>
</div>
<div class="btn-group">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#exampleModal">
    Delete User
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this user?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        You cannot undo this action!
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form method="post" action="/users/<%= @user.id %>">
        <input type="hidden" value="delete" name="_method">
        <button type="submit" class="btn btn-primary">Yes, delet it</button>
        </form>
    </div>
    </div>
</div>
</div>
