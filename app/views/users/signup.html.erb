<% if flash[:error] %>
    <div class="alert alert-danger" role="alert">
        <h5 class="error"><%= flash[:error] %></h5>
    </div>
<% elsif flash[:success] %>
    <div class="alert alert-success" role="alert">
        <h5 class="success"><%= flash[:success] %></h5>
    </div>
<% end %>

<h1>Signup</h1>

<div class="form-container">
    <form method="post" action="/signup">
        <div class="form-group">
            <label for="user_name">Please enter your name</label>
            <input type="text" name="user[user_name]" id="user_name" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="email_address">Email</label>
            <input type="email_address" name="user[email_address]" id="email_address" class="form-control" required><br>
            <small>We'll never share your email with anyone.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="user[password]" id="password" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password-confirmation">Password Confirmation</label>
            <input type="password" name="user[password_confirmation]" id="password-confirmation" class="form-control" required>
        </div>
        <div class="btn-group">
            <input type="submit" class="btn btn-primary" value="Create">
        </div>
    </form>

</div>